<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :gender %>
    <%= f.radio_button :gender, 'male' , :checked => true %>
    <%= f.label :male ,'male'%>
    <%= f.radio_button :gender , 'female' %>
    <%= f.label :female ,'female'%>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email%>
  </div>
  <div class="field">
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :subject %>
    <%= f.select :subject , collection: ["physics" , "chemistry" , "maths"] ,prompt: "select your subject" %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %>
    <%= f.date_select :date_of_birth , :start_year => 1960 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
